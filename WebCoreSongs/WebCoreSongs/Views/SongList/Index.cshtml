    <thead>
        <tr>
            <th>
                <a href="/SongList?SortField=Title">@Html.DisplayNameFor(model => model.FullTitle)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SongInfo)
            </th>
            <th>
                <a href="/SongList?SortField=Artist">@Html.DisplayNameFor(model => model.FullArtistName)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InTablet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cover)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href=@string.Concat("/DBPage/SongAndPerfInfo?songID=", item.Id.ToString())>
                        @Html.DisplayFor(modelItem => item.FullTitle)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SongInfo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullArtistName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InTablet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cover)
                </td>
            </tr>
        }
    </tbody>
</table>
