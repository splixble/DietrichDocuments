@model SongAndPerformancesInfo

@{
    SongAndPerformancesInfo songModel = (SongAndPerformancesInfo)Model;
    string heading = "Song: " + songModel._SongRow.Title;

    ViewData["Title"] = heading;
}

<h1>@heading</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>Venue</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in songModel._SongPerfRows)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PerformanceDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VenueName)

                    @if (item.Comment != null)
                    {
                        <i>
                            <code>&#8212;</code>
                            @Html.DisplayFor(modelItem => item.Comment)
                        </i>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
