@model IEnumerable<WebCoreSongs.Models.Viewsongperformancetotals>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Rank
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TitleAndArtist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstPerformed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastPerformed)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RowNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                <a href=@string.Concat("/DBPage/SongAndPerfInfo?songID=", item.SongId.ToString())>
                    @Html.DisplayFor(modelItem => item.TitleAndArtist)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstPerformed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastPerformed)
            </td>
        </tr>
}
    </tbody>
</table>
